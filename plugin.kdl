        }
    }
    pane size=1 borderless=true {
        plugin location="file:./target/wasm32-wasi/debug/zellij-datetime.wasm" {
            timezone1 "CEST/+2"
            timezone2 "JST/+9"
            background_color "#000"
            foreground_color "#0080a0"
